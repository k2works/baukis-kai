      <div class="EntryPanel__sub">
        <%= image_tag('top/entry2.jpg',class: 'EntryPanel__thumb' , width: '275' , height: '250') %>
      </div>
      <div id="EntryPanel__main">
        <h3 class="EntryPanel__head">あの人気店コラボメニュー</h3>
